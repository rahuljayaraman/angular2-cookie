{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "target": "es5",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "es2015", "dom"],
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "inlineSources": true,
    "stripInternal": false,
    "typeRoots": [
      "./node_modules/@types/!(node)"
    ]
  },
  "exclude": [
    "**/*.spec.*",
    "assets",
    "dist",
    "gulp",
    "node_modules",
    "scripts"
  ],
  "angularCompilerOptions": {
    "genDir": "dist",
    "skipTemplateCodegen": true,
    "debug": true
  }
}
